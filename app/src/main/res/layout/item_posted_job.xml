<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvJobName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:maxLines="2"
        android:text="[FRESHER] Java web"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/soluong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Số lượng: "
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@id/tvJobName"
        app:layout_constraintTop_toBottomOf="@id/tvJobName" />

    <TextView
        android:id="@+id/tvQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3 người"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@id/soluong"
        app:layout_constraintTop_toTopOf="@id/soluong" />

    <TextView
        android:id="@+id/tvSalary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:text="10tr"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvJobName" />

    <TextView
        android:id="@+id/diadiem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Địa điểm: "
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@id/tvJobName"
        app:layout_constraintTop_toBottomOf="@id/soluong" />

    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ha Noi"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@id/diadiem"
        app:layout_constraintTop_toTopOf="@id/diadiem" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:maxLines="3"
        android:text="Mô tả"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@id/diadiem"
        app:layout_constraintTop_toBottomOf="@id/tvLocation" />

    <TextView
        android:id="@+id/lienhe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:maxLines="3"
        android:text="Liên hệ: "
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@id/tvDescription"
        app:layout_constraintTop_toBottomOf="@id/tvDescription" />

    <TextView
        android:id="@+id/tvContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:text="Liên hệ: "
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@id/lienhe"
        app:layout_constraintTop_toTopOf="@id/lienhe" />


</android.support.constraint.ConstraintLayout>